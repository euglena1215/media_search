<div class="text-center row">
  <% images.each do |image| %>
    <img src="<%= image.url %>" width="<%= 100 / (images.size+1) %>%" alt="<%= image.title %>">
  <% end %>
</div>

<%= erb :result, locals: { images: results } if defined?(results) %>

<hr class="text-center"/>

<table class="table table-striped">

  <caption>検索対象データ</caption>

  <tr>
    <th>ID</th>
    <th>title</th>
    <th>author</th>
  </tr>
  <% images.each do |image| %>
  <tr>
    <td><a href="<%= image.url %>">Image<%= image.id %></a></td>
    <td><%= image.title %></td>
    <td><%= image.author %></td>
  </tr>
  <% end %>
</table>

<a class="btn btn-primary" href="/new">登録</a>
