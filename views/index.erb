<div class="text-center row">
  <form action="/search_keyword" method="get">
  <input type="text" name="keyword">
  <button type="submit" class="btn btn-default">キーワード検索</button>
  </form>
</div>

<%= erb :result, locals: { images: results } if defined?(results) %>

<hr class="text-center"/>

<table class="table table-striped">

  <caption>検索対象データ</caption>

  <tr>
    <th>ID</th>
    <th>title</th>
    <th>author</th>
    <th>labels</th>
  </tr>
  <% images.each do |image| %>
  <tr>
    <td><a href="<%= image.url %>">Image<%= image.id %></a></td>
    <td><%= image.title %></td>
    <td><%= image.author %></td>
    <td><%= image.labels %></td>
  </tr>
  <% end %>
</table>

<a class="btn btn-primary" href="/new">登録</a>
<hr align="center" noshade width="80%"/>

<div align="center">
<a href="../text.html">戻る</a>
</div>
